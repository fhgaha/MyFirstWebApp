@model WebApplication1.Models.ProductModel

@{
    var s = Model.Name;
    var firstWord = s.IndexOf(" ") != -1 ? s.Substring(0, s.IndexOf(" ")) : s;
}

<div class="card" style="width: 18rem;">
    <img src="https://loremflickr.com/300/300/@firstWord?lock=@Model.Id" class="card-img-top" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Html.DisplayFor(m => Model.Price)</p>
        <p class="card-text">@Model.Description</p>

        <a href="/Products/ShowDetails/@Model.Id" class="btn btn-primary">Show Details</a>
        <a href="/Products/Edit/@Model.Id" class="btn btn-warning">Edit</a>
        <a href="/Products/Delete/@Model.Id" class="btn btn-danger">Delete</a>

        <!-- Button trigger modal -->
        <button type="button" class="btn btn-primary edit-product-button" value="@Model.Id" data-toggle="modal"
                data-target="#editModal">
            Modal Edit
        </button>

    </div>
</div>